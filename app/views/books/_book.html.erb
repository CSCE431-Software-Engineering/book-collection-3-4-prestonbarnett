<div id="<%= dom_id book %>">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text">
          <strong>Author</strong>: <%= book.author %><br />
          <strong>Price</strong>: <%= number_to_currency book.price %>
        </p>
      </div>
    </div>
</div>
