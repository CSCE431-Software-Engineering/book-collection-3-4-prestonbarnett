<h1>Book</h1>

<%= render("breadcrumb", breadcrumbs: [
  { name: "Books", path: root_path },
  { name: @book.title },
]) %>

<% content_for :alert_content do %>
  <% notice %>
<% end %>

<%= render("alert") %>

<div class="card">
  <div class="card-body">
    <%= render(@book) %>

    <div class="d-flex flex-row gap-3 mt-3">
        <%= link_to("Edit", edit_book_path(@book), class: "btn btn-primary") %>
        <%= link_to("Delete", delete_book_path(@book), method: :delete, class: "btn btn-danger") %>
    </div>
  </div>
</div>
