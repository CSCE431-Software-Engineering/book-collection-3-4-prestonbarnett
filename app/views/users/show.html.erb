<h1>User</h1>

<%= render("shared/breadcrumb", breadcrumbs: [
  { name: "Users", path: users_path },
  { name: "User" }
]) %>

<% content_for :alert_content do %>
  <% notice %>
<% end %>

<%= render("shared/alert") %>

<div class="card">
  <div class="card-body">
    <%= render(@user) %>

    <div class="d-flex flex-row gap-3 mt-3">
      <%= link_to("Edit", edit_user_path(@user), class: "btn btn-primary") %>
      <%= button_to("Delete", @user, method: :delete, class: "btn btn-danger") %>
    </div>
  </div>
</div>
