<h1>User Book</h1>

<%= render("shared/breadcrumb", breadcrumbs: [
  { name: "User Books", path: user_books_path },
  { name: "User Book" }
]) %>

<% content_for :alert_content do %>
  <% notice %>
<% end %>

<%= render("shared/alert") %>

<div class="card">
  <div class="card-body">
    <%= render(@user_book) %>

    <div class="d-flex flex-row gap-3 mt-3">
      <%= link_to("Edit", edit_user_book_path(@user_book), class: "btn btn-primary") %>
      <%= button_to("Delete", @user_book, method: :delete, class: "btn btn-danger") %>
    </div>
  </div>
</div>
